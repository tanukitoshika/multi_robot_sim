<launch>
  <param name="/use_sim_time" value="true"/>
  <arg name="world_file"  default="$(env TURTLEBOT_GAZEBO_WORLD_FILE)"/>
  <arg name="gui" default="false"/>

  <!-- start world -->
  <!--<node name="gazebo" pkg="gazebo" type="gazebo"
   args="$(find multi_robot)/worlds/playground.world" respawn="false" output="screen" />-->
  <include file="$(find kinopy_gzros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <!-- Map server -->
  <arg name="map_file" default="$(find multi_robot_sim)/maps/playground20171003.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" >
       <param name="frame_id" value="/map"/>
  </node>

  <!-- start gui -->
  <!--<node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen"/>-->

  <!-- include our robots -->
  <include file="$(find multi_robot_system)/launch/include/robots.launch.xml"/>

  <!-- Rviz -->
  <!--
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find multi_robot_system)/rviz/agents.rviz"
  output="screen" />
  -->
  <!-- Fake laser -->
  <node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="/camera_depth_frame"/>
    <param name="range_min" value="0.45"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to="/scan"/>
  </node>
</launch>
